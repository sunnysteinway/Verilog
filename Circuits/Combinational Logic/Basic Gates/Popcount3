module top_module( 
    input [2:0] in,
    output [1:0] out );
    
    always @ (*) begin
        
        out = 3'b0;	//first declare "out" as 0
        
        for (int i = 0; i < 3; i = i + 1) begin
            
            if (in[i] == 1'b1) begin
                out = out + 1'b1;
            end
            
        end
        
    end
    
    
    //assign out = in[0] + in[1] + in[2];

endmodule
